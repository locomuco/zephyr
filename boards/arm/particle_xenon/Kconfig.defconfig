if BOARD_PARTICLE_XENON

config BOARD
	default "particle_xenon"

config I2C
	default y

if I2C

config I2C_NRFX
	default y

if I2C_NRFX

config I2C_0
	default y

config I2C_1
	default n

endif #I2C_NRFX

if I2C_0

choice I2C_0_NRF_TYPE
	default I2C_0_NRF_TWIM

endchoice

endif # I2C_0

if I2C_1

choice I2C_1_NRF_TYPE
	default I2C_1_NRF_TWIM

endchoice

endif # I2C_1

endif # I2C

if USB

config USB_NRF52840
	default y

config USB_DEVICE_STACK
	default y

endif # USB

if IEEE802154

config IEEE802154_NRF5
	default y

endif # IEEE802154

endif # BOARD_PARTICLE_XENON
